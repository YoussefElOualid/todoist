{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todoist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todoist.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ todoist.value }}</td>
            </tr>
            <tr>
                <th>Iscompleted</th>
                <td>{{ todoist.isCompleted }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ todoist.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todoist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todoist_edit', { 'id': todoist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
